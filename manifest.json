{
  "manifest_version": 3,
  "name": "Git Activity Analytics",
  "version": "0.1.0",
  "description": "Consolidated Git commit activity analytics across GitLab and GitHub using your logged-in session.",
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Git Activity Analytics"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "options_page": "src/options.html",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://gitlab.com/*",
    "https://github.com/*",
    "https://api.github.com/*",
    "https://git.rolustech.com/*"
  ],
  "optional_host_permissions": [
    "https://*/api/v4/*",
    "http://*/api/v4/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gitlab.com/*",
        "https://github.com/*",
        "https://git.rolustech.com/*"
      ],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ]
} 